<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonDividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/common_color_divider</item>
    </style>

    <!--按钮样式-->
    <style name="CommonBtnStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_button_height</item>
        <item name="android:background">@drawable/common_btn_selector</item>
        <item name="android:textColor">@drawable/common_text_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">60mm</item>
    </style>

</resources>
